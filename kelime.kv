<MainMenu>:
    name: "menu"
    BoxLayout:
        orientation: "vertical"
        padding: 20
        spacing: 10

        Label:
            text: "KelimeKavram"
            font_size: 32
            size_hint_y: None
            height: self.texture_size[1] + 10

        Button:
            text: "Oyna"
            on_release: app.root.current = "play"

        Button:
            text: "Kelime Listesi"
            on_release: app.root.current = "list"

        Button:
            text: "Kelime Ekle"
            on_release: app.root.current = "add"

        Button:
            text: "Skoru Sıfırla"
            on_release: root.reset_scores()

        Button:
            text: "Çık"
            on_release: app.stop()


<PlayScreen>:
    name: "play"
    BoxLayout:
        orientation: "vertical"
        padding: 20
        spacing: 10

        Label:
            id: lbl_q
            text: ""
            font_size: 28
            bold: True
            halign: "center"
            valign: "middle"
            text_size: self.width, None
            size_hint_y: None
            height: self.texture_size[1] + 20

        TextInput:
            id: inp_ans
            multiline: False
            hint_text: "Cevabını gir"
            size_hint_y: None
            height: "40dp"

        Button:
            text: "Gönder"
            size_hint_y: None
            height: "40dp"
            on_release: root.check_answer()

        Label:
            id: lbl_feedback
            markup: True
            font_size: 24
            bold: True
            halign: "center"
            valign: "middle"
            text_size: self.width, None
            size_hint_y: None
            height: self.texture_size[1] + 20

        BoxLayout:
            size_hint_y: None
            height: "30dp"
            spacing: 10

            Label:
                id: lbl_score
                text: "Puan: 0"

            Label:
                id: lbl_attempts
                text: "Hak: 3"

        BoxLayout:
            size_hint_y: None
            height: "40dp"
            spacing: 10

            Button:
                text: "İpucu"
                on_release: root.give_hint()

            Button:
                text: "Cevabı Göster"
                on_release: root.show_answer()

        Button:
            text: "Menüye Dön"
            size_hint_y: None
            height: "40dp"
            on_release: app.root.current = "menu"


<WordListScreen>:
    name: "list"
    BoxLayout:
        orientation: "vertical"
        padding: 20
        spacing: 10

        ScrollView:
            GridLayout:
                id: word_list
                cols: 1
                size_hint_y: None
                row_default_height: "30dp"
                height: self.minimum_height

        Button:
            text: "Menüye Dön"
            size_hint_y: None
            height: "40dp"
            on_release: app.root.current = "menu"


<AddWordScreen>:
    name: "add"
    BoxLayout:
        orientation: "vertical"
        padding: 20
        spacing: 10

        TextInput:
            id: inp_src
            hint_text: "Kaynak kelime"
            size_hint_y: None
            height: "40dp"

        TextInput:
            id: inp_tgt
            hint_text: "Hedef kelime"
            size_hint_y: None
            height: "40dp"

        Button:
            text: "Ekle"
            size_hint_y: None
            height: "40dp"
            on_release: root.add_word()

        Label:
            id: lbl_feedback
            markup: True
            size_hint_y: None
            height: self.texture_size[1] + 10
            font_size: 18

        Button:
            text: "Menüye Dön"
            size_hint_y: None
            height: "40dp"
            on_release: app.root.current = "menu"
